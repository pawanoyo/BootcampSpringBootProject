<?xml version = "1.0" encoding = "UTF-8"?>
<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout>
            <Pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.sss'Z'}] [%-4r] [%thread] [%-5level] - [%msg] - [%mdc]%n</Pattern>
        </layout>
    </appender>
    <appender name = "FILE" class = "ch.qos.logback.core.FileAppender">
        <File>logfile/mylog.log</File>
        <encoder>
            <pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.sss'Z'}] [%-4r] [%thread] [%-5level] - [%msg] - [%mdc]%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>